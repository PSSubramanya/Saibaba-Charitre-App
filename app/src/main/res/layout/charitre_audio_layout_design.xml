<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/charitreaudiolayoutdesignid">

    <!--<ImageView-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="100dp"-->
    <!--android:src="@drawable/poultryicone"-->
    <!--android:id="@+id/img_breed"/>-->


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/saibabaaudiolistviewicon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/saibabaimagea"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">



        <TextView
            android:id="@+id/chapternumbera"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="start"
            android:textStyle="bold"
            android:textColor="@color/darkgrey"
            android:background="#FFFFFF"
            android:textSize="25dp"
            android:text="Chapter"/>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:id="@+id/audiodownloadbtn"
            android:src="@drawable/ic_file_download_black_24dp"
            android:layout_toRightOf="@+id/chapternumbera" />


        <TextView
            android:id="@+id/charitrnamea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:gravity="start"
            android:paddingTop="3dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/chapternumbera"
            android:background="@color/colorWhite"
            android:text="Chapter Title"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>