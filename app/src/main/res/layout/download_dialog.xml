<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_border"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/dialoguebreedhenimg"-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:padding="10dp"-->
            <!--android:src="@drawable/ic_audiofiledownloadb" />-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:text="Saibaba Chapter number"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/chapternumberdialog"
            android:gravity="center"
            android:textColor="@color/darkgrey"
            android:fontFamily="@font/fc"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/downloaddialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Download this audio file for offline service"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textColor="@color/darkgrey"
            android:fontFamily="@font/fc"
            android:textSize="15dp"/>


        <Button
            android:id="@+id/downloadservicebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/greendownload"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="11dp"
            android:paddingLeft="120dp"
            android:paddingRight="115dp"
            android:text="Download" />


        <Button
            android:id="@+id/cancelbtndialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingLeft="120dp"
            android:paddingRight="115dp"
            android:text="Cancel"
            android:textSize="11dp"
            android:textColor="@color/darkgrey"/>


    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_audiofiledownloadb"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/downloadicondialog"/>

</RelativeLayout>